---
import Navbar from '../components/Navbar.astro';
---

<html lang="es">
  <head>
    <title>Iniciar sesión – Luna Journal</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="module" src="/firebase-login.js" defer></script>
    <link rel="stylesheet" href="/auth.css" />
  </head>

  <body>
    <Navbar />

    <main class="auth-main">
      <section class="auth-box">
        <div class="tabs">
          <button id="login-tab" class="active">Iniciar sesión</button>
          <button id="register-tab">Crear cuenta</button>
        </div>

        <form id="login-form" class="form-tab">
          <input type="email" id="login-email" placeholder="Correo electrónico" required />
          <input type="password" id="login-password" placeholder="Contraseña" required />
          <button type="submit">Entrar</button>
          <p id="login-error" class="error-msg"></p>
        </form>

        <form id="register-form" class="form-tab hidden">
          <input type="email" id="register-email" placeholder="Correo electrónico" required />
          <input type="password" id="register-password" placeholder="Contraseña" required />
          <button type="submit">Registrarse</button>
          <p id="register-error" class="error-msg"></p>
        </form>
      </section>
    </main>
  </body>
</html>
