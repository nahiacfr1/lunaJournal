---
import Navbar from '../components/Navbar.astro';

const cartas = [
  {
    nombre: "El Loco",
    significado: "Representa nuevos comienzos, libertad, aventura y espontaneidad.",
    consejo: "Confía en el viaje, incluso si no conoces el destino. Atrévete."
  },
  {
    nombre: "La Emperatriz",
    significado: "Simboliza abundancia, fertilidad y conexión con la naturaleza.",
    consejo: "Cuida lo que siembras hoy; florecerá con amor y paciencia."
  },
  {
    nombre: "El Ermitaño",
    significado: "Momento de introspección, guía interna y búsqueda espiritual.",
    consejo: "Escucha tu silencio. En él está la sabiduría que necesitas."
  },
  {
    nombre: "La Estrella",
    significado: "Esperanza, inspiración y conexión divina.",
    consejo: "Confía en que el universo está a tu favor. Todo está fluyendo."
  },
  // Añade más cartas aquí cuando quieras (hasta las 78)
];

function obtenerCartaDelDia() {
  const fecha = new Date().toISOString().split("T")[0]; // YYYY-MM-DD
  const hash = [...fecha].reduce((acc, c) => acc + c.charCodeAt(0), 0);
  const index = hash % cartas.length;
  return cartas[index];
}

const carta = obtenerCartaDelDia();
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Carta del Día – Luna Journal</title>
  </head>
  <body style="font-family: 'Poppins', sans-serif; background: linear-gradient(to bottom, #1e1b2e, #2e2649); color: #f4e2d8; margin: 0; min-height: 100vh;">
    <Navbar />
    <main style="padding: 2rem; max-width: 700px; margin: auto; text-align: center;">
      <h1>🃏 Tu carta del día</h1>
      <p style="margin-top: 1rem; font-size: 1.2rem;">La carta que te acompaña hoy es:</p>

      <div style="margin-top: 2rem; background: rgba(255,255,255,0.05); padding: 1.5rem; border-radius: 12px;">
        <h2>{carta.nombre}</h2>
        <p><strong>Significado:</strong> {carta.significado}</p>
        <p><em>{carta.consejo}</em></p>
      </div>

      <p style="margin-top: 2rem; font-size: 0.9rem; opacity: 0.8;">* Recibirás una carta distinta mañana ✨</p>
    </main>
  </body>
</html>
